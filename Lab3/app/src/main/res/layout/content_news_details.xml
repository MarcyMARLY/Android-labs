<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_details_iv"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:srcCompat="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:padding="5dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_details_iv"
        >

        <TextView
            android:id="@+id/activity_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#616161"
            android:layout_marginLeft="15dp"
            android:textSize="32dp"
            />

        <TextView
            android:id="@+id/activity_details_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/activity_details_title"
            android:layout_marginTop="10dp"
            android:textColor="#616161"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/activity_details_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/activity_details_date"
            android:textColor="#9e9e9e"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>